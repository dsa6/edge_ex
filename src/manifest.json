{
    "name": "essTools",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "第一个Edge浏览器扩展",
    "icons": {
        "16": "icons/pikaqiu16x16.png",
        "32": "icons/pikaqiu32x32.png",
        "48": "icons/pikaqiu48x48.png",
        "128": "icons/pikaqiu128x128.png"
    },
    "action": {
        "default_popup": "index.html"
    },
    "permissions":[// 设置可访问权限
        "tabs",
        "cookies",
        "webRequest"
    ],
    "host_permissions":[// 设置可访问网站
        "http://*/*",
        "https://*/*"
    ]
}